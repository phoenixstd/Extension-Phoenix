{
    "manifest_version": 3,
    "name": "Phoenix Studio - Extension (Modelos)",
    "author":"Sebastian Garzon - Programador (Phoenix Studio)",
    "description": "Extension de envio de informacion de las transmisiones de modelos para stats (chaturbate, Stripchat, camsoda)",
    "version": "2.8",
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "128": "images/estudio.png"
    },
    "permissions": [
        "activeTab",
        "alarms",
        "tabs",
        "scripting",
        "storage",
        "notifications"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "service_worker": "js/background.js"
    },
    "content_scripts": [{
        "matches": [
            "https://*.chaturbate.com/*", "https://chaturbate.com/", "https://*.stripchat.com/*", "https://es.stripchat.com/*", "https://www.camsoda.com/*"
        ],
        "js": [
            "js/jquery-3.4.1.min.js",
            "js/content.js"
        ],
        "run_at": "document_end"
    }]
}